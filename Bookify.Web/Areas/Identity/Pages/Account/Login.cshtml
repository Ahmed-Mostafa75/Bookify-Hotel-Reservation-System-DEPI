@page
@model LoginModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}
<div class="auth-page">
    <div class="auth-container">
        <div class="card auth-card">
            <div class="card-body">
                <h1><i class="bi bi-box-arrow-in-right me-2"></i>Sign In</h1>
                <p class="text-center text-muted mb-4">Welcome back! Sign in to your Bookify account</p>
                
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="bi bi-envelope me-1"></i>Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="bi bi-lock me-1"></i>Password
                        </label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Remember me
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </button>
                </form>
                
                <div class="auth-links">
                    <p class="mb-2">
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="mb-0">
                        Don't have an account? 
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

