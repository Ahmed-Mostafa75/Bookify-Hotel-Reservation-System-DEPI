@{
    ViewData["Title"] = "Bookify";
}
<section class="hero mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h1 class="display-5 fw-bold">Welcome to Bookify</h1>
                <p class="lead">Discover luxury accommodations, reserve your perfect stay, and experience seamless booking with secure payments.</p>
                <div class="mt-4">
                    <a class="btn btn-primary btn-lg me-2 mb-2" asp-controller="Rooms" asp-action="Index">
                        <i class="bi bi-search me-2"></i>Browse Rooms
                    </a>
                    <a class="btn btn-success btn-lg me-2 mb-2" asp-controller="Booking" asp-action="Cart">
                        <i class="bi bi-cart me-2"></i>View Cart
                    </a>
                    @if (User.IsInRole("Admin")){
                        <a class="btn btn-outline-light btn-lg mb-2" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-shield-check me-2"></i>Admin Panel
                        </a>
                    }
                </div>
            </div>
            <div class="col-md-5">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <i class="bi bi-calendar-event me-2"></i>Quick Search
                    </div>
                    <div class="card-body">
                        <form method="get" asp-controller="Rooms" asp-action="Index" class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label"><i class="bi bi-calendar-check me-1"></i>Check In</label>
                                <input type="date" name="checkIn" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="bi bi-calendar-x me-1"></i>Check Out</label>
                                <input type="date" name="checkOut" class="form-control" />
                            </div>
                            <div class="col-12">
                                <button class="btn btn-success w-100">
                                    <i class="bi bi-search me-2"></i>Search Availability
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </section>

