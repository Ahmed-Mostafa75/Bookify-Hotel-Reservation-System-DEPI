@model IEnumerable<Bookify.Data.Entities.Room>
@{
    ViewData["Title"] = "Rooms";
}
<div class="mb-4">
    <h2><i class="bi bi-door-open me-2"></i>Search Rooms</h2>
    <p class="text-muted">Find your perfect accommodation</p>
</div>
<div class="card mb-4 shadow-lg">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label"><i class="bi bi-calendar-check me-1"></i>Check In</label>
                <input type="date" name="checkIn" class="form-control" value="@((DateTime?)ViewBag.CheckIn)?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label"><i class="bi bi-calendar-x me-1"></i>Check Out</label>
                <input type="date" name="checkOut" class="form-control" value="@((DateTime?)ViewBag.CheckOut)?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4">
                <label class="form-label"><i class="bi bi-tag me-1"></i>Room Type</label>
                <select name="roomTypeId" class="form-select">
                    <option value="">Any Room Type</option>
                    @foreach (var rt in (IEnumerable<Bookify.Data.Entities.RoomType>)ViewBag.RoomTypes){
                        <option value="@rt.Id">@rt.Name (@rt.Capacity guests) - @String.Format("{0:C}", rt.BasePricePerNight)/night</option>
                    }
                </select>
            </div>
            <div class="col-md-2 align-self-end">
                <button class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
@foreach(var r in Model){
    <div class="col">
        <div class="card h-100 shadow-sm">
            <img src="@r.RoomType?.ImageUrl" class="card-img-top" alt="@r.RoomType?.Name" />
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-door-open me-2" style="color: var(--primary-color);"></i>
                    @r.RoomType?.Name â€” Room @r.Number
                </h5>
                <p class="card-text text-muted">@r.RoomType?.Description</p>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="fw-bold fs-5" style="color: var(--success-color);">
                        <i class="bi bi-currency-dollar me-1"></i>@String.Format("{0:C}", r.RoomType?.BasePricePerNight)<small class="text-muted">/night</small>
                    </span>
                    <span class="badge bg-secondary">
                        <i class="bi bi-people me-1"></i>Sleeps @r.RoomType?.Capacity
                    </span>
                </div>
                @if (!string.IsNullOrWhiteSpace(r.RoomType?.Amenities)){
                    <div class="mt-2">
                        @foreach (var a in r.RoomType!.Amenities!.Split(',', StringSplitOptions.RemoveEmptyEntries)){
                            <span class="badge bg-dark border me-1 mb-1">@a.Trim()</span>
                        }
                    </div>
                }
            </div>
            <div class="card-footer bg-white border-0">
                <form asp-controller="Booking" asp-action="AddToCart" method="post" class="d-flex gap-2">
                    <input type="hidden" name="roomId" value="@r.Id" />
                    <input type="hidden" name="checkIn" value="@((DateTime?)ViewBag.CheckIn)?.ToString("yyyy-MM-dd")" />
                    <input type="hidden" name="checkOut" value="@((DateTime?)ViewBag.CheckOut)?.ToString("yyyy-MM-dd")" />
                    <button class="btn btn-success flex-fill">
                        <i class="bi bi-cart-plus me-2"></i>Reserve Now
                    </button>
                </form>
            </div>
        </div>
    </div>
}
</div>