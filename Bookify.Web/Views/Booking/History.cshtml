@model IEnumerable<Bookify.Data.Entities.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="mb-4">
    <h2><i class="bi bi-calendar-check me-2"></i>My Bookings</h2>
    <p class="text-muted">Your reservation history</p>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Room</th>
                    <th>Check In</th>
                    <th>Check Out</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>
                        <strong>@(b.Room?.RoomType?.Name ?? "Room") â€” @b.Room?.Number</strong>
                    </td>
                    <td>
                        <span class="badge bg-info">@b.CheckIn.ToShortDateString()</span>
                    </td>
                    <td>
                        <span class="badge bg-warning">@b.CheckOut.ToShortDateString()</span>
                    </td>
                    <td>
                        @String.Format("{0:C}", b.TotalCost)
                    </td>
                    <td>
                        @if (string.Equals(b.Status, "Paid", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else if (string.Equals(b.Status, "Cancelled", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                        else if (string.Equals(b.Status, "Successful", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-success">Successful</span>
                            }
                        else 
                        {
                            <span class="badge bg-secondary">Pending</span>
                        }
                    </td>
                    <td>
                        @b.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card shadow-lg text-center py-5">
        <div class="card-body">
            <i class="bi bi-card-list" style="font-size: 4rem; color: var(--text-muted);"></i>
            <h4 class="mt-3">No bookings yet</h4>
            <p class="text-muted">Browse rooms and make your first reservation.</p>
            <a class="btn btn-primary mt-3" asp-controller="Rooms" asp-action="Index">
                <i class="bi bi-search me-2"></i>Browse Rooms
            </a>
        </div>
    </div>
}
