@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="card shadow-lg text-center py-5">
    <div class="card-body">
        <i class="bi bi-x-circle" style="font-size: 4rem; color: #dc3545;"></i>
        <h2 class="mt-3">Payment Cancelled</h2>
        <p class="text-muted mt-2">Your payment was not completed. You can try again from your cart.</p>
        <a class="btn btn-primary mt-3" asp-action="Cart" asp-controller="Booking">
            <i class="bi bi-cart me-2"></i>Back to Cart
        </a>
        <a class="btn btn-secondary mt-3 ms-2" asp-action="Index" asp-controller="Rooms">
            <i class="bi bi-search me-2"></i>Browse Rooms
        </a>
    </div>
</div>
